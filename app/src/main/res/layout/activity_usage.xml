<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.UsageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Usage_Toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IV_Toolbar_User"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:src="@drawable/profile_image"/>

            <TextView
                android:id="@+id/TV_Toolbar_User"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="User name"
                android:textSize="30sp"
                android:textColor="#fff"
                android:paddingLeft="10dp"
                android:gravity="center"
                />

        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/Usage_RecycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Usage_Toolbar"
        >

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Usage_Contacts_Button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_massage_add_black_24dp"
        app:backgroundTint="@color/colorPrimaryDark" />
</RelativeLayout>